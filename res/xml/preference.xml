<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="touch"
        android:title="Enable Touch" >
    </CheckBoxPreference>

    <EditTextPreference
        android:defaultValue="mschlech"
        android:key="login"
        android:title="login" >
    </EditTextPreference>
    <EditTextPreference
        android:defaultValue="linus123"
        android:key="password"
        android:title="Password" >
    </EditTextPreference>

    <ListPreference
        android:defaultValue="tracks"
        android:dialogMessage="favorites or tracks"
        android:dialogTitle="source"
        android:entries="@array/sourceValue"
        android:entryValues="@array/sourceKey"
        android:key="source" />

</PreferenceScreen>